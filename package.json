{
  "name": "kpi-cli",
  "version": "1.0.0",
  "description": "Complete KPI management CLI application with SQLite database, reporting, and analytics - production ready and API-ready",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "kpi": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "db:studio": "drizzle-kit studio",
    "cli": "tsx src/cli/index.ts"
  },
  "keywords": ["kpi", "cli", "performance", "management", "sqlite", "typescript", "reporting", "analytics", "evaluation", "scoring"],
  "author": "KPI CLI Development Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/witoon-skydea/KPI-cli1.git"
  },
  "homepage": "https://github.com/witoon-skydea/KPI-cli1#readme",
  "bugs": {
    "url": "https://github.com/witoon-skydea/KPI-cli1/issues"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "drizzle-orm": "^0.33.0",
    "better-sqlite3": "^11.3.0",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "date-fns": "^3.0.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/inquirer": "^9.0.7",
    "@types/better-sqlite3": "^7.6.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0",
    "drizzle-kit": "^0.24.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}